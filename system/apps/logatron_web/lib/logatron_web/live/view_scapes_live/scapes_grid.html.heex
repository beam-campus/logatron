<div class="mx-5 px-4 py-1 text-white">
  <h1 class="text-2xl font-bold">Streams</h1>
  <div class="grid grid-cols-2 gap-4">
    <% scapes_list =
      get_scapes_summary()
        |> Map.to_list()
        |> Enum.sort() %>
    <%= for {key,value} <- scapes_list do %>
      <div class="p-3 flex flex-row gap-5">
        <p class="font-bold hover:text-ltOrange"><%= key %></p>
        <p>fed by <%= value %> agent(s)</p>
      </div>
    <% end %>
  </div>
</div>
